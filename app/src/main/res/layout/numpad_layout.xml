<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="4"
    android:columnCount="4"
    android:layout_margin="4dp">

    <Button
        android:id="@+id/num_7"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="7"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_8"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="8"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_9"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="9"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <ImageButton
        android:id="@+id/func_backspace"
        android:layout_margin="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="2dp"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_fun_bg"
        android:src="@drawable/ic_backspace"
        android:contentDescription="Backspace"/>

    <Button
        android:id="@+id/num_4"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="4"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_5"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="5"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_6"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="6"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/func_clear"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="C"
        android:textSize="40sp"
        android:elevation="8dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:background="@drawable/numpad_fun_bg"/>

    <Button
        android:id="@+id/num_1"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="1"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_2"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="2"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_3"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="3"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/func_equal"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="="
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_rowSpan="2"
        android:layout_gravity="fill_vertical"
        android:background="@drawable/numpad_equal"/>

    <Button
        android:id="@+id/num_dot"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="."
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_0"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="0"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>
    <Button
        android:id="@+id/num_00"
        android:layout_margin="2dp"
        android:height="80dp"
        android:text="00"
        android:textSize="50sp"
        android:elevation="8dp"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:background="@drawable/numpad_bg"/>

</GridLayout>